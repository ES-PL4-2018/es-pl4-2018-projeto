<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:anndroid="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        android:id="@+id/cardFeed"
        app:cardCornerRadius="15dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="175dp"
            android:background="@color/white">

        <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.10"
                app:layout_constraintHorizontal_bias="0.48"
                android:text="@string/allPlaceholderText"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/feedUserName"/>

        <TextView
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.60"
                app:layout_constraintHorizontal_bias="0.5"
                android:text="@string/allPlaceholderText"
                android:textColor="@color/black"
                android:id="@+id/feedText"/>

        <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.04"
                app:layout_constraintHorizontal_bias="0.02"
                android:id="@+id/feedProfilePicture"/>

        <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.95"
                app:layout_constraintHorizontal_bias="0.30"
                android:text="@string/allPlaceholderText"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/feedRetweets"/>

        <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.95"
                app:layout_constraintHorizontal_bias="0.075"
                android:text="@string/allPlaceholderText"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/feedFavorites"/>

        <TextView
                android:layout_width="100dp"
                android:layout_height="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.90"
                app:layout_constraintHorizontal_bias="0.85"
                android:text="@string/allPlaceholderText"
                android:textSize="10sp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:id="@+id/feedDate" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>