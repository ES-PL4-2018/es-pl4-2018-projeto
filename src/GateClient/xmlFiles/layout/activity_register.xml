<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/InputPass" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:id="@+id/InputPass2">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Verify Password" android:textAlignment="center"
                android:textColor="@android:color/black" android:visibility="visible" android:password="true"
                android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/InputUser" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:id="@+id/InputPass">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Password" android:textAlignment="center"
                android:textColor="@android:color/black" android:visibility="visible" android:password="true"
                android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/InputEmail" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:id="@+id/InputUser">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Username" android:textAlignment="center"
                android:textColor="@android:color/black" android:visibility="visible" android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/InputName" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:id="@+id/InputORCID">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="ORCID" android:textAlignment="center"
                android:textColor="@android:color/black" android:visibility="visible" android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/InputORCID" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:id="@+id/InputEmail">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email" android:textAlignment="center"
                android:textColor="@android:color/black" android:visibility="visible"
                android:inputType="textEmailAddress" android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
            android:text="Gate Register"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:id="@+id/RegisterHere" android:visibility="visible" android:textSize="25sp"
            android:textColor="@android:color/black" android:textStyle="bold" android:textAlignment="center"
            android:layout_marginEnd="100dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
    />
    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/RegisterHere" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:id="@+id/InputName">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="First and Last Name" android:textAlignment="center"
                android:textColor="@android:color/black" android:visibility="visible"
                android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Register" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="135dp" android:layout_marginEnd="135dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/InputPass2"/>
</android.support.constraint.ConstraintLayout>