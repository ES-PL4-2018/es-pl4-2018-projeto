<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterP1Activity"
        android:background="@drawable/background1"
        android:descendantFocusability="beforeDescendants"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <!-- Input User Name Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintHorizontal_bias="0.500"
            android:id="@+id/InputUserName"
            android:background="@drawable/input_round_corners"
            app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/InputInst"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:maxLength="15"
                android:visibility="visible"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:hint="@string/inputUserName"
                android:gravity="center"
                android:background="@drawable/input_round_corners"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Input Password Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.43"
            app:layout_constraintHorizontal_bias="0.500"
            android:id="@+id/InputUserPass"
            android:background="@drawable/input_round_corners"
            app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/InputInst"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:maxLength="20"
                android:visibility="visible"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:hint="@string/inputUserPass"
                android:gravity="center"
                android:background="@drawable/input_round_corners" android:id="@+id/InputUserPassText"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Input User Email Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.61"
            app:layout_constraintHorizontal_bias="0.500"
            android:id="@+id/InputUserEmail"
            android:background="@drawable/input_round_corners"
            app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/InputInst"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:visibility="visible"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:hint="@string/inputUserEmail"
                android:gravity="center"
                android:background="@drawable/input_round_corners" android:id="@+id/InputUserEmailText"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Input ORCID Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.79"
            app:layout_constraintHorizontal_bias="0.500"
            android:id="@+id/InputORCID"
            android:background="@drawable/input_round_corners"
            app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/InputInst"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="16"
                android:visibility="visible"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:hint="@string/inputORCID"
                android:gravity="center"
                android:background="@drawable/input_round_corners"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Next Page Button-->
    <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.955"
            app:layout_constraintHorizontal_bias="0.955"
            android:id="@+id/Page1to2"
            android:background="@drawable/arrow_forward"
            android:contextClickable="true"/>

    <!-- Page Number Text -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.955"
            app:layout_constraintHorizontal_bias="0.15"
            android:textSize="20sp"
            android:textColor="#F98F74"
            android:text="@string/page1of3"
            android:id="@+id/Page1of3" />

    <!-- Personal Info Text -->
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.065"
            app:layout_constraintHorizontal_bias="0.500"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="@string/infoAccount"
            android:id="@+id/infoAccount"/>


</android.support.constraint.ConstraintLayout>