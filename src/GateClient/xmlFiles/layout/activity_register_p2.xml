<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterP2Activity"
        android:background="@drawable/background1"
        android:descendantFocusability="beforeDescendants"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" android:id="@+id/RegisterP2BG">

    <!-- Input First Name Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.22"
            app:layout_constraintHorizontal_bias="0.500"
            android:id="@+id/InputFirstName"
            android:background="@drawable/input_round_corners"
            app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/InputInst"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:textAlignment="center"
                android:visibility="visible"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:hint="@string/inputFirstName"
                android:gravity="center"
                android:background="@drawable/input_round_corners"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Input Last Name Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.37"
            app:layout_constraintHorizontal_bias="0.500"
            android:id="@+id/InputLastName"
            android:background="@drawable/input_round_corners"
            app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/InputInst"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:maxLength="15"
                android:textAlignment="center"
                android:visibility="visible"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:hint="@string/inputLastName"
                android:gravity="center"
                android:background="@drawable/input_round_corners"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Input Birth Date Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.52"
            app:layout_constraintHorizontal_bias="0.500"
            android:id="@+id/InputBirth"
            android:background="@drawable/input_round_corners"
            app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/InputInst"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:visibility="visible"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:hint="@string/inputBirth"
                android:gravity="center"
                android:background="@drawable/input_round_corners" android:inputType="date"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Input Institution Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.67"
            app:layout_constraintHorizontal_bias="0.500"
            android:id="@+id/InputInst"
            android:background="@drawable/input_round_corners"
            app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/InputInst"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:visibility="visible"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:hint="@string/inputInst"
                android:gravity="center"
                android:background="@drawable/input_round_corners"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Input Research Units Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.82"
            app:layout_constraintHorizontal_bias="0.500"
            android:id="@+id/InputResearch"
            android:background="@drawable/input_round_corners"
            app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/InputInst"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:visibility="visible"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:hint="@string/inputResearch"
                android:gravity="center"
                android:background="@drawable/input_round_corners"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Next Page Button-->
    <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.955"
            app:layout_constraintHorizontal_bias="0.955"
            android:id="@+id/Page2to3"
            android:background="@drawable/arrow_forward"
            android:contextClickable="true"/>

    <!-- Page Number Text -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.955"
            app:layout_constraintHorizontal_bias="0.15"
            android:textSize="20sp"
            android:textColor="#F98F74"
            android:text="@string/page2of3"
            android:id="@+id/Page2of3"/>

    <!-- Personal Info Text -->
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.065"
            app:layout_constraintHorizontal_bias="0.500"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="@string/infoPersonal"
            android:id="@+id/infoPersonal"/>


</android.support.constraint.ConstraintLayout>