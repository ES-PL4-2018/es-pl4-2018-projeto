            app:layout_constraintBottom_toBottomOf="@+id/profile_info1"
            app:layout_constraintEnd_toEndOf="@+id/profile_info1"
            app:layout_constraintStart_toStartOf="@+id/profile_info1"
            app:layout_constraintTop_toTopOf="@+id/profile_info1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/profile_sub_text1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Kansas "
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/profile_info1"
            app:layout_constraintEnd_toEndOf="@+id/profile_info1"
            app:layout_constraintStart_toStartOf="@+id/profile_info1"
            app:layout_constraintTop_toTopOf="@+id/profile_info1"
            app:layout_constraintVertical_bias="1.0" />


