<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:anndroid="http://schemas.android.com/tools"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:id="@+id/card_discovery_add"
        app:cardCornerRadius="15dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF">

        <android.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintHorizontal_bias="0.50"
                android:background="@drawable/button_white_outline"
                android:text="@string/registerButtonPlaceholderText"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:id="@+id/cardDiscoveryAddText"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/bvn_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="0.50"
                android:id="@+id/cardDiscoveryAddImage"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>